{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "appAssociation": "AUTO",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html",
        "dynamicLinks": true
      },
      {
        "source": "/listenSong/**",
        "destination": "/index.html",
        "dynamicLinks": true
      },
      { 
        "source": "/share/**",
        "destination": "/index.html", 
        "dynamicLinks": true } 
    ]
  }
}
